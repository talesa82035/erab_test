@存在しない移動先(ARG:1, ARG)
#FUNCTION
#DIM RESULT保存

SELECTCASE ARG:1
	CASE 0
		RETURNF 存在しない移動先_0(ARG)
	CASE 1
		RETURNF 存在しない移動先_1(ARG)
	CASE 2
		RETURNF 存在しない移動先_2(ARG)
	CASE 3
		RETURNF 存在しない移動先_3(ARG)
	CASE 100
		RESULT保存 = RESULT
		RESULT = 1
		TRYCALLFORMF 存在しない移動先_%開催予定祭り名%(ARG)
		SWAP RESULT, RESULT保存
		RETURNF RESULT保存
	CASE 200 TO 499
		RESULT保存 = RESULT
		RESULT = 1
		TRYCALLFORMF 存在しない移動先_{ARG:1}(ARG)
		SWAP RESULT, RESULT保存
		RETURNF RESULT保存
ENDSELECT

