@マップエリア名取得(ARG)
#FUNCTIONS

SELECTCASE ARG
	CASE 0
		RETURNF "リゾートエリア"
	CASE 1
		RETURNF "空艇港エリア"
	CASE 2
		RETURNF "居住区エリア"
	CASE 3
		RETURNF "海エリア"
	CASE 100
		RETURNF @"%SUBSTRING(開催予定祭り名, 9)%マップ"
	CASE 999
		RETURNF "宿泊エリア"
ENDSELECT

;---------------------------------------------------------------
;キャラの居場所再設定
;---------------------------------------------------------------
@派生マップ番号取得(マップ番号, 現在地番号)
#FUNCTION
#DIM マップ番号
#DIM 現在地番号

SELECTCASE マップ番号
	CASE 0
		;リゾートマップ
		SELECTCASE 現在地番号
			CASE 1 TO 20
				RETURNF 0
			CASE 302 TO 308
				RETURNF 3
			CASE 402 TO 406
				RETURNF 4
			CASE 502 TO 506
				RETURNF 5
			CASE 701 TO 711
				RETURNF 7
			CASE 801 TO 811
				RETURNF 8
			CASE 1503 TO 1515
				RETURNF 15
			CASE 2001 TO 2020
				RETURNF 20
		ENDSELECT
	CASE 2
		;居住区
		SELECTCASE 現在地番号
			CASE 1 TO 20
				RETURNF 0
			CASE 101 TO 104
				RETURNF 1
		ENDSELECT
	CASE 3
		;海
		SELECTCASE 現在地番号
			CASE 1 TO 20
				RETURNF 0
			CASE 101 TO 105
				RETURNF 1
		ENDSELECT
ENDSELECT

@マップ遷移判定処理(マップ番号, 現在地番号)
#DIM マップ番号
#DIM 現在地番号

SELECTCASE マップ番号
	CASE 0
		;基本→キャンプ
		IF 現在地番号 == 3 && 施設改造度:3:0
			RETURN 303
		ENDIF
		;基本→レストラン
		IF 現在地番号 == 4 && 施設改造度:4:0
			RETURN 403
		ENDIF
		;基本→遊戯
		IF 現在地番号 == 5 && 施設改造度:5:0
			RETURN 503
		ENDIF
		;基本→男湯
		IF 現在地番号 == 7 && 施設改造度:7:0
			RETURN 702
		ENDIF
		;基本→女湯
		IF 現在地番号 == 8 && 施設改造度:8:0
			RETURN 802
		ENDIF
		;基本→プール
		IF 現在地番号 == 15 && 施設改造度:15:0
			RETURN 1503
		ENDIF
		;基本→自宅
		IF 現在地番号 == 20 && 施設改造度:20:0
			RETURN 2001
		ENDIF
		;キャンプ→基本
		IF 現在地番号 == 302
			RETURN 2
		ENDIF
		;レストラン→基本
		IF 現在地番号 == 402
			RETURN 2
		ENDIF
		;遊戯→基本
		IF 現在地番号 == 502
			RETURN 2
		ENDIF
		;男湯→基本
		IF 現在地番号 == 701
			RETURN 6
		ENDIF
		;男湯→女湯
		IF 現在地番号 == 709
			RETURN 810
		ENDIF
		;女湯→基本
		IF 現在地番号 == 801
			RETURN 6
		ENDIF
		;女湯→男湯
		IF 現在地番号 == 809
			RETURN 710
		ENDIF
		;プール→基本
		IF 現在地番号 == 1513
			RETURN 13
		ENDIF
		IF 現在地番号 == 1514
			RETURN 14
		ENDIF
		;自宅→基本
		IF 現在地番号 == 2010
			RETURN 2
		ENDIF
	CASE 2
		;一丁目-二丁目
		IF 現在地番号 == 14
			RETURN 101
		ENDIF
		IF 現在地番号 == 104
			RETURN 1
		ENDIF
	CASE 3
		;海水浴場＞沖合
		IF 現在地番号 == 8
			RETURN 102
		ENDIF
		;沖合＞海水浴場
		IF 現在地番号 == 101
			RETURN 6
		ENDIF
ENDSELECT

RETURN 0

