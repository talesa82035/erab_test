		;泥酔時は該当処理に飛ばすため分岐
		CALL CHARA_MOVEMENT_T(LOCAL, 追従モード)
		CONTINUE
	ENDIF
	SIF あなた追従中
		CONTINUE
	SIF CFLAG:LOCAL:うふふ
		CONTINUE
	SIF CFLAG:LOCAL:飲み会
		CONTINUE
	SIF CFLAG:LOCAL:一緒に遊ぶ
		CONTINUE
